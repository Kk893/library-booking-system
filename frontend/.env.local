# API URL - Must be prefixed with NEXT_PUBLIC_ to be accessible in the browser
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_JWT_COOKIE_NAME=library_booking_token

# Social Login
NEXT_PUBLIC_GOOGLE_AUTH_ENABLED=true
NEXT_PUBLIC_FACEBOOK_AUTH_ENABLED=true

# Payment Gateways
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_key_id
NEXT_PUBLIC_PAYMENT_METHODS=card,upi,wallet,netbanking

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Analytics and Monitoring (optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id

# Third-party Services
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_cloudinary_upload_preset

# App Configuration
NEXT_PUBLIC_APP_NAME=Library Booking System
NEXT_PUBLIC_APP_DESCRIPTION=Reserve books and reading seats at libraries near you
NEXT_PUBLIC_CONTACT_EMAIL=contact@librarybooking.com
NEXT_PUBLIC_SUPPORT_PHONE=+1234567890

# Seat Booking Configuration
NEXT_PUBLIC_SEAT_LOCK_DURATION=300 # 5 minutes in seconds
NEXT_PUBLIC_MAX_SEATS_PER_BOOKING=4

# ðŸ†• Cross-Origin Dev Access (useful for LAN testing or mobile testing)
NEXT_PUBLIC_ALLOWED_ORIGIN=http://192.168.83.1:3000
