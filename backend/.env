# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/library-booking-system

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_should_be_long_and_complex_in_production
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Email Configuration (For development, use Ethereal or Mailtrap)
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=yourusername
EMAIL_PASS=yourpassword
EMAIL_FROM=noreply@librarybooking.com
EMAIL_FROM_NAME=Library Booking System

# Frontend URL (for email links and CORS)
FRONTEND_URL=http://localhost:3000

# Payment Gateway (Stripe/Razorpay)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis (for seat locking and caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=600000  # 10 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Logging
LOG_LEVEL=debug

# Note: In production, use secure and randomly generated values for all secrets
# This is a development configuration file, do not use these values in production